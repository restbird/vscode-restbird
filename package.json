{
    "name": "vscode-restbird",
    "displayName": "Restbird Debugger",
    "description": "",
    "version": "0.12.0",
    "publisher": "Restbird",
    "icon": "images/restbird_icon_2.png",
    "galleryBanner": {
        "color": "#000000",
        "theme": "dark"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/restbird/vscode-restbird/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/restbird/vscode-restbird.git"
    },
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other",
        "Debuggers"
    ],
    "activationEvents": [
        "onCommand:restbird.debugScript"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "restbird.debugScript",
                "title": "Restbird: Debug Restbird Script"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "restbird.debugScript",
                    "group": "restbird.org"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Restbird Debugger",
            "properties": {
                "global.serverPort": {
                    "type": [
                        "string"
                    ],
                    "default": "8080",
                    "description": "The port Restbird docker server listens to.",
                    "scope": "resource"
                },
                "credential.username": {
                    "type": [
                        "string"
                    ],
                    "default": "admin",
                    "description": "The username of Restbird user",
                    "scope": "resource"
                },
                "credential.password": {
                    "type": [
                        "string"
                    ],
                    "default": "admin",
                    "description": "The password of Restbird user.",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/fs-extra": "5.0.2",
        "@types/mocha": "^2.2.32",
        "@types/node": "^8.10.25",
        "mocha": "^3.2.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.22"
    },
    "dependencies": {
        "elegant-spinner": "^1.0.1",
        "encodeurl": "^1.0.1",
        "filesize": "^3.3.0",
        "fs-extra": "^5.0.0",
        "iconv-lite": "^0.4.15",
        "js-beautify": "^1.7.5",
        "mime-types": "^2.1.14",
        "pretty-data": "^0.40.0",
        "request": "^2.81.0"
    }
}
